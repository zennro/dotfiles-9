# -*- mode: conf; -*-
[core]
  editor=emacsclient
  pager=less -x2
  autocrlf = input
  safecrlf = true

[user]
  name = Colin Bell
  email = col@baibell.org

[color]
  ui = true

[push]
  default = tracking

[http]
  sslVerify = false

[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]


[apply]
  whitespace = nowarn

[commit]
  template = ~/.gitmessage

[alias]
  br = branch
  cancel = reset â€“soft HEAD^
  ci = commit
  co = checkout

  gr      = log --decorate --graph --pretty=oneline --abbrev-commit
  grd     = log --graph --pretty=format:'%C(auto)%h%Creset - %C(auto)%d%Creset %s %Cgreen(%cD) %C(bold blue)[%an]%Creset' --abbrev-commit
  grr     = log --graph --pretty=format:'%C(auto)%h%Creset - %C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
  hist    = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  l       = log --pretty=format:"%C(auto)%h%C(auto)%d\\ %Creset%s%Cgreen(%cr)%Cblue[%cn]" --decorate
  ld      = log --pretty=format:"%C(auto)%h%C(auto)%d\\ %Creset%s%Cgreen(%cD)%Cblue[%cn]" --decorate
  le      = log --oneline --decorate
  slog    = shortlog -s -n

  # All commits for a file, pass file name as an argument
  fl = log -u

  st = status -sb
  unpushed = log --branches --not --remotes
  type = cat-file -t
  dump = cat-file -p
